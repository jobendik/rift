{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@components/*": ["src/components/*"],
      "@controls/*": ["src/controls/*"],
      "@core/*": ["src/core/*"],
      "@effects/*": ["src/effects/*"],
      "@entities/*": ["src/entities/*"],
      "@ai/*": ["src/ai/*"],
      "@physics/*": ["src/physics/*"],
      "@weapons/*": ["src/weapons/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["styles/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist"]
}
